############################
# Telegram
############################

# Токен Telegram-бота (из BotFather)
TELEGRAM_BOT_TOKEN=

# ID админ-чата (группа или личный чат)
TELEGRAM_ADMIN_CHAT_ID=

############################
# Yclients
############################

# API-токен Yclients
YCLIENTS_PARTNER_TOKEN=

YCLIENTS_USER_TOKEN=

# ID компании (AQUALORD-Detailing)
YCLIENTS_COMPANY_ID=

############################
# PostgreSQL
############################

POSTGRESQL_HOST=
POSTGRESQL_PORT=5432
POSTGRESQL_USER=
POSTGRESQL_PASSWORD=
POSTGRESQL_DBNAME=

############################
# App / Scheduler
############################

# Интервал polling Yclients (в секундах)
POLL_INTERVAL_SEC=60

# Recheck pending links every N seconds
PENDING_RECHECK_INTERVAL_SEC=120

# Limit how many pending links we process per tick
PENDING_RECHECK_BATCH_SIZE=20

# Напоминания в минутах до записи (T-24, T-2)
# 1440 = 24 часа, 120 = 2 часа
REMINDER_OFFSETS_MINUTES=1440,120

# Окружение
NODE_ENV=production
